---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>paulrouget.com</title>
  <link href="http://paulrouget.com"/>
  <link type="application/atom+xml" rel="self" href="http://paulrouget.com/index.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://paulrouget.com/</id>
  <author>
    <name>Paul Rouget</name>
    <email>foo@bar.com</email>
  </author>

  {% for post in site.posts  limit: 3 %}
  {% if post.standalone == null %}
  <entry>
    <id>http://paulrouget.com{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://paulrouget.com{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <updated>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
    <published>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</published>
    <author>
      <name>Paul Rouget</name>
      <uri>http://paulrouget.com/</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endif %}
  {% endfor %}

</feed>
